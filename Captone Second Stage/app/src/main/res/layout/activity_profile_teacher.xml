<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.ProfileTeacherActivity"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorApp"
            android:paddingTop="30dp"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp">
                <ImageView
                    android:id="@+id/add_fav_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart"
                    android:layout_marginLeft="15dp"
                    android:tint="@color/colorWhite"
                    android:clickable="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/star_img_f"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:src="@drawable/star"
                        />
                    <ImageView
                        android:id="@+id/star_img_s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/star"
                       />
                    <ImageView
                        android:id="@+id/star_img_t"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/star"
                        android:tint="@color/colorWhite"/>
                    <ImageView
                        android:id="@+id/star_img_fourth"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/star"
                        android:tint="@color/colorWhite"/>
                    <ImageView
                        android:id="@+id/star_img_fifth"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/star"
                        android:tint="@color/colorWhite"/>
                </LinearLayout>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImg_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/graduate"/>
            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manar_odeh"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0597853325"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
               />
        </LinearLayout>
        <TextView
            android:id="@+id/aboutUs_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_profile"
            android:padding="25dp"
            android:fontFamily="sans-serif"
            />
        <Button
            android:id="@+id/btn_call"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="@color/colorApp"
            android:background="@drawable/rounded_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:text="Call"/>
        <Button
            android:id="@+id/btn_sms"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:textAllCaps="false"
            android:textColor="@color/colorApp"
            android:text="Send SMS"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            />

    </LinearLayout>

</ScrollView>