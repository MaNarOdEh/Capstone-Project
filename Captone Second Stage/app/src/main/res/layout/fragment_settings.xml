<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.SettingsFragment"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
      >
        <TextView
            android:id="@+id/setting_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textSize="20sp"
            android:textColor="@color/colorApp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btn_update_user_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update User Name"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/colorApp"
                android:textColor="@color/colorWhite"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/btn_update_password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update Password"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/button_border"
                android:textColor="@color/colorApp"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/btn_update_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update Email "
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/colorApp"
                android:textColor="@color/colorWhite"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/btn_update_address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update Address"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/button_border"
                android:textColor="@color/colorApp"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/btn_update_courses"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update Courses "
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/colorApp"
                android:textColor="@color/colorWhite"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/btn_update_phone_number"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update Phone Number"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/button_border"
                android:textColor="@color/colorApp"
                android:layout_margin="15dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>